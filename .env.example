# HNC Legal Questionnaire Environment Variables
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://hnc_user:hnc_password@hnc-database:5432/hnc_legal
POSTGRES_DB=hnc_legal
POSTGRES_USER=hnc_user
POSTGRES_PASSWORD=hnc_password_change_me

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://hnc-redis:6379/0

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production-minimum-32-characters
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Password hashing settings
BCRYPT_ROUNDS=12

# =============================================================================
# AI INTEGRATION
# =============================================================================
# Get your API key from: https://cloud.cerebras.ai/
CEREBRAS_API_KEY=your-cerebras-api-key-here

# AI Configuration
AI_MODEL=llama3.1-70b
AI_MAX_TOKENS=1500
AI_TEMPERATURE=0.7

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DATA_DIR=/app/data
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=production

# Session settings
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=5

# File upload limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,png

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@hnc-legal.com

# =============================================================================
# SSL/HTTPS CONFIGURATION (Production)
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_FILE_PATH=/app/logs/application.log
LOG_ROTATION_SIZE_MB=100
LOG_RETENTION_DAYS=30

# Health check intervals
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=10

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30

# Database connection pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AI_ENABLED=true
FEATURE_EXPORTS_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=false
FEATURE_AUDIT_LOGGING=true

# =============================================================================
# DEVELOPMENT SETTINGS (Only for development)
# =============================================================================
# Uncomment for development mode
# NODE_ENV=development
# DEBUG=true
# LOG_LEVEL=DEBUG